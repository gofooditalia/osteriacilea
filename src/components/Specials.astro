<section id="specials" class="bg-[#f0ece7] dark:bg-[#2a1b18] py-20">
    <div class="max-w-[1200px] mx-auto px-6 lg:px-10">
        <div class="text-center mb-12 space-y-4">
            <h2
                class="text-4xl md:text-5xl font-bold tracking-tight text-neutral-text dark:text-white font-display"
            >
                I Nostri Piatti del Giorno
            </h2>
            <p
                class="text-[#896861] dark:text-[#a1928e] max-w-xl mx-auto italic text-lg"
            >
                Freschezza quotidiana selezionata dai mercati locali ogni
                mattina.
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                specials.map((item) => (
                    <div class="group flex flex-col gap-4 bg-bg-light dark:bg-bg-dark p-4 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300">
                        <div class="w-full aspect-square rounded-lg overflow-hidden">
                            <div
                                class="w-full h-full bg-cover bg-center transition-transform duration-500 group-hover:scale-110"
                                style={`background-image: url('${item.image}')`}
                            >
                                <div class="w-full h-full bg-black/0 group-hover:bg-black/10 transition-all" />
                            </div>
                        </div>
                        <div class="flex flex-col gap-1">
                            <div class="flex justify-between items-center">
                                <p class="text-neutral-text dark:text-white text-xl font-bold">
                                    {item.title}
                                </p>
                                <span class="text-primary font-bold">
                                    {item.price}
                                </span>
                            </div>
                            <p class="text-[#896861] dark:text-[#a1928e] text-sm leading-normal">
                                {item.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="mt-12 text-center">
            <a
                href="/menu"
                class="inline-block border-2 border-primary text-primary hover:bg-primary hover:text-white px-10 py-3 rounded-lg font-bold transition-all uppercase tracking-wider text-sm"
            >
                Visualizza l'intero Menu
            </a>
        </div>
    </div>
</section>
