---
const images = [
    { src: "https://images.unsplash.com/photo-1551183053-bf91a1d81141?auto=format&fit=crop&q=80&w=1632", alt: "Specialit√† di pesce" },
    { src: "https://images.unsplash.com/photo-1473093226795-af9932fe5856?auto=format&fit=crop&q=80&w=1394", alt: "Pasta siciliana" },
    { src: "https://images.unsplash.com/photo-1559339352-11d035aa65de?auto=format&fit=crop&q=80&w=1974", alt: "Vino rosso e pane" },
    { src: "https://images.unsplash.com/photo-1541014741259-df549fa9ba6f?auto=format&fit=crop&q=80&w=1470", alt: "Dolce tradizionale" },
    { src: "https://images.unsplash.com/photo-1590846406792-0adc7f938f1d?auto=format&fit=crop&q=80&w=1370", alt: "Atmosfera locale" },
    { src: "https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&q=80&w=1470", alt: "Platting gourmet" }
];
---

<section id="gallery" class="py-24 bg-primary px-6">
    <div class="max-w-7xl mx-auto space-y-12">
        <div class="text-center space-y-4">
            <h2 class="font-serif-script text-accent text-5xl">La Nostra Gallery</h2>
            <p class="text-neutral-text/60 uppercase tracking-widest text-sm font-bold">Uno sguardo in cucina e in sala</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {images.map((img) => (
                <div class="relative overflow-hidden rounded-xl aspect-[4/5] group cursor-pointer shadow-lg">
                    <img 
                        src={img.src} 
                        alt={img.alt} 
                        class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-end p-6">
                        <p class="text-white font-bold text-lg">{img.alt}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
